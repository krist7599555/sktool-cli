{
  "[javascript][html][typescript][markdown][json][svelte][javascriptreact][typescriptreact][css]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.options": {
    "overrideConfigFile": "./.eslintrc.cjs"
  },
  "eslint.packageManager": "pnpm",
  "eslint.run": "onSave",
  "eslint.validate": [
    "css",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "svelte",
    "typescript",
    "typescriptreact"
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "prettier.documentSelectors": ["*.css", "*.html", "*.json", "*.md", "*.svelte", "*.ts"],
  "svelte.plugin.svelte.format.enable": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".wireit": true,
  }
}
